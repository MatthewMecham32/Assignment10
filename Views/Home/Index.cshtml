@{
    ViewData["Title"] = "Home Page";
}

<!--Bring in a view list model of bowlers-->
@model IndexViewModel

<div>
    @foreach (var x in Model.Bowlers)
    {
        <h3 class="badge badge-pill" style="float:initial">@x.BowlerFirstName @x.BowlerMiddleInit @x.BowlerLastName</h3>
        <span>
            <p class="d-inline-block text-lg-center">@x.BowlerAddress</p>
            <p class="d-inline-block">@x.BowlerCity, @x.BowlerState</p>
            <p class="font-weight-lighter">@x.BowlerZip</p>
        </span>
        <span class="card-text p-1">
            @x.BowlerPhoneNumber
        </span>
        <br />
        <br />
        <br />

    }

</div>

<div page-info="@Model.PageNumberingInfo" page-url-teamname="@Model.TeamName" >

</div>
